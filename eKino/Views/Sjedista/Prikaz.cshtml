
@{
    ViewData["Title"] = "Prikaz";
}

@model SjedistaPrikazVM
        
@for(int i=0; i<Model.Sjedista.Count; i+=10)
{
<div class="seats-row">
    @for (int j = i; j < i + 10; j++)
    {
        <div class="@Model.Sjedista[j].cssClass">@Model.Sjedista[j].Red@Model.Sjedista[j].Kolona</div>
        @if (Model.Sjedista[j].cssClass == "seat")
        {
            <input type="checkbox" name="sjedista"
                   value="@Model.Sjedista[j].SjedisteID" 
                   id="@Model.Sjedista[j].Red@Model.Sjedista[j].Kolona" hidden/>
        }
    }


</div>
}
<script>
    //Checkbox select/deselect
    sjedista = document.querySelectorAll(".seats-row > .seat");
    for (let i = 0; i < sjedista.length; i++) {
        sjedista[i].addEventListener("click", (e) => {
            let checkbox = document.getElementById(e.target.innerText);
            checkbox.checked = !checkbox.checked;
        });
    }
    function nulirajCheckBoxove() {
        let cbox = document.querySelectorAll(".seats-row > input");
        for (let i = 0; i < cbox.length; i++)
            cbox[i].checked = false;
    }
</script>
